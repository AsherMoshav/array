{
    "name": "hi-folks/array",
    "version": "0.0.3",
    "description": "Arr class for managing arrays, built on top of the PHP array functions.",
    "keywords": [
        "Hi-Folks",
        "array"
    ],
    "homepage": "https://github.com/hi-folks/array",
    "license": "MIT",
    "authors": [
        {
            "name": "Roberto B.",
            "email": "roberto.butti@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "HiFolks\\DataType\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HiFolks\\Array\\Tests\\": "tests"
        }
    },
    "scripts": {
        "all": [
            "@test", "@format"
        ],
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
